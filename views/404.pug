doctype html
html
    head
        style.
            #timer {
                font-weight: bold;
                color: red;
            }

    body
        p
            span 페이지를 찾을 수 없습니다!
            br
            br
            span#timer 3
            span 초 후 메인 화면으로 이동합니다. 
        script.
            var timer = document.querySelector('#timer');
            var interval = setInterval(() => {
                var leftTime = +timer.innerText;

                if (leftTime > 1) {
                    timer.innerText = --leftTime;
                } else {
                    clearInterval(interval);
                    location.href = '/';
                }
            }, 1000);
