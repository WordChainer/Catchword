extends layout

block Content
    .container-fluid
        .row: .col-md-12.my-3
            ul.list-group.list-group-flush
                each searchLog in searchLogs
                    -
                        var { keyword, date } = searchLog;
                        var timestamp = date.format('YY.MM.DD HH:mm:ss');

                    li.list-group-item.text-white
                        span.badge.badge-pill.badge-dark.p-2.mr-3= timestamp
                        span= keyword

        .row
            .col-md-12
                ul.pagination.flex-wrap.justify-content-center
                    -
                        var start = current;
                            end = Math.ceil(total / perPage),
                            prev = start > 1 ? start - 1 : 1,
                            next = start + 1 < end ? start + 1 : end,
                            max = 7,
                            rest = Math.floor(max / 2);

                        if (end < 1) {
                            end = 1;
                        }

                    li.page-item
                        a.page-link(href=`/logs/${id}/1`): span «
                    li.page-item
                        a.page-link(href=`/logs/${id}/${prev}`): span ‹

                    if end > max
                        if start - rest > 1
                            li.page-item
                                a.page-link.disabled: span ...

                        if start <= rest
                            - for (var page = 1; page <= max; page++)
                                li.page-item
                                    a.page-link(href=`/logs/${id}/${page}` class=(page === start ? 'page-active' : ''))= page
                        else if start + rest > end
                            - for (var page = end - max + 1; page <= end; page++)
                                li.page-item
                                    a.page-link(href=`/logs/${id}/${page}` class=(page === start ? 'page-active' : ''))= page
                        else
                            - for (var page = start - rest; page <= start + rest; page++)
                                li.page-item
                                    a.page-link(href=`/logs/${id}/${page}` class=(page === start ? 'page-active' : ''))= page

                        if start + rest < end
                            li.page-item
                                a.page-link.disabled: span ...
                    else
                        - for (var page = 1; page <= end; page++)
                            li.page-item
                                a.page-link(href=`/logs/${id}/${page}` class=(page === start ? 'page-active' : ''))= page
 
                    li.page-item
                        a.page-link(href=`/logs/${id}/${next}`): span ›
                    li.page-item
                        a.page-link(href=`/logs/${id}/${end}`): span »
